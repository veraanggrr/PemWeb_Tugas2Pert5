<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crud Node js - MySQL</title>
    <style>
      /* General styling */
      body {
        font-family: "Comic Sans MS", cursive, sans-serif;
        background-color: #f2f2f2;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        flex-direction: column;
        min-height: 100vh; /* Mengubah dari height ke min-height */
        overflow-y: auto; /* Mengizinkan scroll vertikal */
      }

      h1 {
        color: #ff6f61;
        font-size: 3rem;
        text-align: center;
        margin-bottom: 20px;
        animation: bounceIn 1.2s ease-out;
      }

      /* Styling for the table */
      table {
        width: 80%;
        margin-bottom: 20px;
        border-collapse: collapse;
        border: 2px solid #ff6f61;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        background-color: white;
        transform: rotate(-1deg);
        animation: floatingTable 5s ease-in-out infinite;
      }

      th,
      td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        font-size: 1.2rem;
      }

      th {
        background-color: #ff6f61;
        color: white;
      }

      td {
        background-color: #fff3e0;
      }

      /* Button styling */
      button {
        background-color: #ff6f61;
        color: white;
        border: none;
        padding: 10px 20px;
        margin-top: 20px;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 5px;
        transition: all 0.4s ease;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
        animation: wobble 3s infinite ease-in-out;
      }

      button:hover {
        background-color: #ff9f89;
        transform: translateY(-5px) scale(1.05);
      }

      /* Input field styling */
      input[type="text"],
      input[type="email"],
      input[type="tel"] {
        width: 80%;
        padding: 10px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 2px solid #ff6f61;
        border-radius: 5px;
        transition: 0.3s;
        margin-bottom: 12px; /* Tambahkan margin agar lebih seimbang */
      }

      input[type="text"]:focus,
      input[type="email"]:focus,
      input[type="tel"]:focus {
        border-color: #ff9f89;
        box-shadow: 0 0 8px rgba(255, 111, 97, 0.5);
      }

      /* Keyframes for animations */
      @keyframes bounceIn {
        0% {
          transform: scale(0.8);
          opacity: 0;
        }
        80% {
          transform: scale(1.1);
          opacity: 1;
        }
        100% {
          transform: scale(1);
        }
      }

      @keyframes wobble {
        0%,
        100% {
          transform: rotate(-5deg);
        }
        50% {
          transform: rotate(5deg);
        }
      }

      @keyframes floatingTable {
        0% {
          transform: rotate(-1deg) translateY(0);
        }
        50% {
          transform: rotate(1deg) translateY(-10px);
        }
        100% {
          transform: rotate(-1deg) translateY(0);
        }
      }

      /* Footer animation */
      footer {
        margin-top: 50px;
        font-size: 0.9rem;
        text-align: center;
        color: #888;
        animation: slideUp 1.5s ease-in-out;
      }

      @keyframes slideUp {
        from {
          transform: translateY(50px);
          opacity: 0;
        }
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }
    </style>
  </head>
  <body>
    <h1>Tabel daftar User/Pengguna</h1>
    <table border="1">
      <tr>
        <th>ID</th>
        <th>name</th>
        <th>Email</th>
        <th>Telephone</th>
        <th>Aksi</th>
      </tr>

      <% users.forEach(user => { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.Name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td>
          <a href="/edit/<%= user.id %>">Edit</a>
          <a href="/delete/<%= user.id %>">Hapus</a>
        </td>
      </tr>
      <% }) %>
    </table>

    <h2>edit data pengguna baru</h2>
    <form action="/add" method="post">
      <label for="name">name:</label>
      <input type="text" id="name" name="Name" required /><br />
      <label for="email">Email:</label>
      <input type="email" name="email" id="email" /><br />
      <label for="phone">Telephone:</label>
      <input type="text" name="phone" id="phone" /><br />
      <button type="submit">Tambah</button>
    </form>
  </body>
</html>
